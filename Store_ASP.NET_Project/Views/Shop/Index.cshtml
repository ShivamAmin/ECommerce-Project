@model IEnumerable<Store_ASP.NET_Project.Models.Product>

@{
    /**/

    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container">
    <div class="row">
        <div class="input-group">
            <div class="input-group-btn">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">All Categories <span class="caret"></span></button>
                <ul class="dropdown-menu">
                    <li><a href="#">All Categories</a></li>
                    @foreach (var item in ViewBag.Categories){
                        <li><a href="#">@item</a></li>
                    }
                </ul>
            </div>
            <input type="text" class="form-control" style="max-width:100%" placeholder="Search...">
            <div class="input-group-btn">
                <button type="submit" class="btn btn-success">Go!</button>
            </div>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
<div class="container" style="margin:5px 0px 5px 0px;">
    <div class="row">
        <div class="col-lg-4">
            <div class="thumbnail" style="display:flex;justify-content:center;margin:0 auto;width:270px;overflow:hidden;"><img style="flex:none;width: auto;height: auto;max-width: 270px;max-height: 200px;vertical-align: middle;" src="@item.Image" height="200" /></div>
        </div>
        <div class="col-lg-4">
            <div class="row">@Html.DisplayFor(modelItem => item.Name)</div>
            <div class="row">@Html.DisplayFor(modelItem => item.Price)</div>
        </div>
        <div class="col-lg-4">
            @Html.ActionLink("Add to cart", "Cart", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </div>
    </div>
</div>
}
