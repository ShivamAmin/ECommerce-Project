@model IEnumerable<Store_ASP.NET_Project.Models.Product>

@{
                /**/

                ViewBag.Title = "Index";
}

<h2>Index</h2>


@foreach (var item in Model)
{
<table class="table">
    <tr>
        <td rowspan="2"><div class="thumbnail" style="width:270px;overflow:hidden;"><img style="display:block;margin:0 auto;width: auto;height: auto;max-width: 270px;max-height: 200px;vertical-align: middle;" src="@item.Image" height="200" /></div></td>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td rowspan="2">
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    <tr>
        <td><h2>@Html.DisplayFor(modelItem => item.Price)</h2></td>
    </tr>
</table>
}